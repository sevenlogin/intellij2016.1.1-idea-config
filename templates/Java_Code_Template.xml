<templateSet group="Java_Code_Template">
  <template name="getLogger" value="import org.slf4j.Logger;&#10;import org.slf4j.LoggerFactory;&#10;&#10;private static final Logger logger = LoggerFactory.getLogger($CLASS_NAME$.class);" description="insert lo4j variabal" toReformat="false" toShortenFQNames="true">
    <variable name="CLASS_NAME" expression="className()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_CODE" value="true" />
      <option name="JAVA_STATEMENT" value="true" />
      <option name="JAVA_EXPRESSION" value="true" />
      <option name="JAVA_DECLARATION" value="true" />
      <option name="JAVA_COMMENT" value="true" />
      <option name="JAVA_STRING" value="true" />
      <option name="COMPLETION" value="true" />
    </context>
  </template>
  <template name="logi" value="logger.info(&quot;&quot;)" toReformat="false" toShortenFQNames="true">
    <context />
  </template>
  <template name="loge" value="logger.error(String.format(&quot;error &quot;), e)" toReformat="false" toShortenFQNames="true">
    <context />
  </template>
</templateSet>